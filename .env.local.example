# Supabase
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# User Configuration
USER_EMAIL=your_email@example.com
USER_LOCATION_LAT=38.9072
USER_LOCATION_LON=-77.0369

# Cron Job Security
# Generate a secure random string for production (e.g., openssl rand -base64 32)
CRON_SECRET=your_cron_secret

# Data Pipeline Configuration
# Data source: "mock" (free, for testing) or "auto.dev" (free tier: 1000 calls/month)
DATA_SOURCE=mock

# Skip VIN validation during development to avoid NHTSA API rate limits
# Set to "false" in production for full validation
SKIP_VIN_VALIDATION=true

# Email Notifications (Resend)
# Get your API key from https://resend.com/api-keys
# Free tier: 100 emails/day, 3,000/month
RESEND_API_KEY=your_resend_api_key

# External API Keys (add when ready)
# AUTODEV_API_KEY=your_autodev_key
# MARKETCHECK_API_KEY=your_marketcheck_key
